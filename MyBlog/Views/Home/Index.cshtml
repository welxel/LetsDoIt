                            <div class="fields">
                                <div class="field third">
                                    <label for="demo-name">Name</label>
                                    <input asp-for="UserName" class="form-control" type="text" name="UserName" id="demo-name" value="" placeholder="Name" />
                                </div>
                                <div class="field third">
                                    <label for="demo-email">Email</label>
                                    <input asp-for="EMail" class="form-control"   type="email" name="EMail" id="demo-email" value="" placeholder="E-Mail" />
                                </div>
                                <div class="field">
                                    <label for="demo-name">Title</label>
                                    <input asp-for="Title" class="form-control"  type="text" name="Title" id="demo-name" value="" placeholder="Title" />
                                </div>
                                <div class="field">
                                    <label for="demo-name">Message</label>
                                    <textarea asp-for="Message" class="form-control"  name="Message" id="demo-name" placeholder="Enter your message" rows="2"></textarea>
